<%= link_to "Swing Search / Serenade / Music Thing", root_path, :class => 'brand' %>
<%= image_tag "music.png", :style => "width: 32px; padding-top: 5px; margin-left: -5px;" %>
<ul class="nav pull-right">
  <% if user_signed_in? %>
    <% if check_for_unread_mail() %>
      <li></i><%= link_to "<i class='icon-envelope-alt icon-large font_color_yellow'></i>".html_safe, inbox_path, :alt => "Inbox", :title => "Inbox", :class => "nav_icon" %></li>
    <% else %>
      <li></i><%= link_to "<i class='icon-envelope-alt icon-large'></i>".html_safe, inbox_path, :alt => "Inbox", :title => "Inbox", :class => "nav_icon" %></li>
    <% end %>
  <% end %>
  <% if user_signed_in? %>
    <li><%= link_to 'Edit account', edit_user_registration_path %></li>
    <% if current_user.has_role? :admin %>
      <li><%= link_to 'Admin', users_path %></li>
    <% end %>
    <li><%= link_to 'Logout', destroy_user_session_path, :method=>'delete' %></li>
  <% else %>
    <li><%= link_to 'Login', new_user_session_path %></li>
    <li><%= link_to 'Sign up', new_user_registration_path %></li>
  <% end %>
</ul>