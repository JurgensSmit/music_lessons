<h3><%= @user.user_type %></h3>
<p><%= @user.name %></p>
<p><%= @user.location if @user.location %></p>
<p><%= @user.about if @user.about %></p>
<p>Email: <%= @user.email if @user.email %></p>
<p><%= @user.about if @user.about %></p>
<%= image_tag @user.image_url, :class => 'img-portrait' unless @user.image_url.blank? %>
<p>GPlus: <%= @user.gplus_url if @user.gplus_url %></p>
<p><% if @user.user_type == 'Teacher' %>
	Hourly Rate: <%= number_to_currency(@user.rate) if @user.rate %>
<% end %></p>

 <p>Tags: <%= @user.tag_list if @user.tag_list %></p>