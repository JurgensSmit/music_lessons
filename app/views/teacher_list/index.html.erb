<h3 class="text-center">
	<% if !user_signed_in? %>
	<%= link_to 'List yourself to give music lessons', new_user_registration_path %>
	<% else %>
	<p>List of Music Teachers</p>
	<% end %>
</h3>

<% if params[:search] %>
	<% @users.each do |user| %>
		<% if user.tag_list != [] %>
			<% user.tag_list.each do |tag| %>
				<% if params[:search].include?(tag)%>
					<h4><%= link_to user.name, user %></h4>
					<p>Tags:
						<% user.tag_list.each do |tag| %>
							<%= tag %>
						<% end %>
					</p>
				<% break %>
				<% end %>
			<% end %>
		<% end %>
	<% end %>
<% else %>
	<% @users.each do |user| %>
		<h4><%= link_to user.name, user %></h4>
			<% if user.tag_list != [] %>
			<p>Tags:
				<% user.tag_list.each do |tag| %>
					<%= tag %>
				<% end %>
			</p>
		<% end %>
	<% end %>
<% end %>	


